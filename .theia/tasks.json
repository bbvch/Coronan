{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "build coverage",
            "type": "shell",
            "command": "./build.sh --cov=coverage.info",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        }, 
        {
            "label": "build release",
            "type": "shell",
            "command": "./build.sh -r",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },         
        {
            "label": "clean",
            "type": "shell",
            "command": "/usr/bin/rm -rf build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "unittests",
            "type": "shell",
            "command": "/home/linuxbrew/.linuxbrew/bin/cmake --build build --target run_unittests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "format files",
            "type": "shell",
            "command": "./format_source_files.sh",
            "problemMatcher": [ ]
        }

    ]
}