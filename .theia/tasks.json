{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build gcc debug",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ],
            "dependsOn": "configure gcc"
        },
        {
            "label": "build gcc release",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [ ],
            "dependsOn": "configure gcc release"
        },
        {
            "label": "build clang debug",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [ ],
            "dependsOn": "configure clang"
        },
        {
            "label": "build clang release",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [ ],
            "dependsOn": "configure clang release"
        },
        {
            "label": "configure gcc",
            "type": "shell",
            "command": "cmake -S . --preset=linux-ninja",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ ]
        },
        {
            "label": "configure gcc release",
            "type": "shell",
            "command": "cmake -S . --preset=linux-release-ninja",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ ]
        },
        {
            "label": "configure clang",
            "type": "shell",
            "command": "cmake -S . --preset=linux-ninja-clang",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ ]
        },
        {
            "label": "configure clang release",
            "type": "shell",
            "command": "cmake -S . --preset=linux-release-ninja-clang",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [ ]
        },          
        {
            "label": "clean",
            "type": "shell",
            "command": "/usr/bin/rm -rf build",
            "group": "build",
            "problemMatcher": [ ]
        },
        {
            "label": "unittests",
            "type": "shell",
            "command": "cmake --build build --target run_unittests",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "format files",
            "type": "shell",
            "command": "./format_source_files.sh",
            "problemMatcher": [ ]
        }

    ]
}