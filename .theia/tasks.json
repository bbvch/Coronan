{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build gcc",
            "type": "shell",
            "command": "cmake -S . --preset=linux-ninja && cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "build gcc release",
            "type": "shell",
            "command": "cmake -S . --preset=linux-release-ninja && cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "build clang",
            "type": "shell",
            "command": "cmake -S . --preset=linux-ninja-clang && cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "build clang release",
            "type": "shell",
            "command": "cmake -S . --preset=linux-release-ninja-clang && cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },          
        {
            "label": "clean",
            "type": "shell",
            "command": "/usr/bin/rm -rf build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "unittests",
            "type": "shell",
            "command": "/home/linuxbrew/.linuxbrew/bin/cmake --build build --target run_unittests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [ ]
        },
        {
            "label": "format files",
            "type": "shell",
            "command": "./format_source_files.sh",
            "problemMatcher": [ ]
        }

    ]
}