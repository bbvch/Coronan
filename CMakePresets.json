{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "coverage",
            "description": "Configure coverage",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++",
                "ENABLE_COVERAGE": {
                    "type": "BOOL",
                    "value": "ON"
                }
            },
            "hidden": true
        },
        {
            "name": "release",
            "description": "Configure release build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "hidden": true
        },
        {
            "name": "ninja",
            "description": "Configure release build",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "clang",
            "description": "Configure release build",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "hidden": true
        },
        {
            "name": "linux",
            "description": "Sets generator, build and install directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "ENABLE_TESTING": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_CXX_COMPILER": "g++",
                "ENABLE_COVERAGE": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "linux-coverage",
            "description": "Configure coverage",
            "inherits": [
                "coverage",
                "linux"
            ]
        },
        {
            "name": "linux-release",
            "description": "Configure coverage",
            "inherits": [
                "release",
                "linux"
            ]
        },
        {
            "name": "linux-ninja",
            "description": "Configure debug build",
            "inherits": [
                "ninja",
                "linux"
            ]
        },
        {
            "name": "linux-release-ninja",
            "description": "Configure debug build",
            "inherits": [
                "release",
                "linux-ninja"
            ]
        },
        {
            "name": "linux-coverage-ninja",
            "description": "Configure coverage",
            "inherits": [
                "coverage",
                "linux-ninja"
            ]
        },
        {
            "name": "linux-ninja-clang",
            "description": "Configure debug build",
            "inherits": [
                "ninja",
                "clang",
                "linux"
            ]
        },
        {
            "name": "linux-ninja-clang-address-sanitizers",
            "description": "Configure debug build with address sanitizers",
            "inherits": [
                "ninja",
                "clang",
                "linux"
            ],
            "cacheVariables": {
                "ENABLE_SANITIZER_ADDRESS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_SANITIZER_LEAK": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_SANITIZER_UNDEFINED_BEHAVIOR": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "linux-release-ninja-clang",
            "description": "Configure debug build",
            "inherits": [
                "release",
                "linux-ninja-clang"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-build",
            "configurePreset": "linux",
            "jobs": 16
        },
        {
            "name": "linux-clean-build",
            "cleanFirst": true,
            "inherits": "linux-build"
        },
        {
            "name": "linux-build-doc",
            "inherits": "linux-build",
            "targets": [
                "docs"
            ]
        },
        {
            "name": "package",
            "inherits": "linux-build",
            "targets": [
                "coronan_qt",
                "docs",
                "package"
            ]
        }
    ]
}
