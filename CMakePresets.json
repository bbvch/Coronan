{
  "buildPresets": [
    {
      "configurePreset": "linux",
      "name": "linux-build"
    },
    {
      "cleanFirst": true,
      "inherits": "linux-build",
      "name": "linux-clean-build"
    },
    {
      "inherits": "linux-build",
      "name": "linux-build-doc",
      "targets": [
        "docs"
      ]
    },
    {
      "inherits": "linux-build",
      "name": "linux-build-package",
      "targets": [
        "package"
      ]
    }
  ],
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CODE_COVERAGE": {
          "type": "BOOL",
          "value": "ON"
        }
      },
      "description": "Configure coverage",
      "hidden": true,
      "name": "coverage"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "description": "Configure release build",
      "hidden": true,
      "name": "release"
    },
    {
      "description": "Configure release build",
      "generator": "Ninja",
      "hidden": true,
      "name": "ninja"
    },
    {
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "description": "Configure release build",
      "hidden": true,
      "name": "clang"
    },
    {
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_CXX_COMPILER": "g++",
        "CODE_COVERAGE": {
          "type": "BOOL",
          "value": "OFF"
        }
      },
      "description": "Sets generator, build and install directory",
      "generator": "Unix Makefiles",
      "name": "linux"
    },
    {
      "description": "Configure coverage",
      "inherits": [
        "coverage",
        "linux"
      ],
      "name": "linux-coverage"
    },
    {
      "description": "Configure coverage",
      "inherits": [
        "release",
        "linux"
      ],
      "name": "linux-release"
    },
    {
      "description": "Configure debug build",
      "inherits": [
        "ninja",
        "linux"
      ],
      "name": "linux-ninja"
    },
    {
      "description": "Configure debug build",
      "inherits": [
        "release",
        "linux-ninja"
      ],
      "name": "linux-release-ninja"
    },
    {
      "description": "Configure coverage",
      "inherits": [
        "coverage",
        "linux-ninja"
      ],
      "name": "linux-coverage-ninja"
    },
    {
      "description": "Configure debug build",
      "inherits": [
        "ninja",
        "clang",
        "linux"
      ],
      "name": "linux-ninja-clang"
    },
    {
      "description": "Configure debug build",
      "inherits": [
        "release",
        "linux-ninja-clang"
      ],
      "name": "linux-release-ninja-clang"
    }
  ],
  "version": 2
}
