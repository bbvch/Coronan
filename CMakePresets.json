{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "coverage",
      "hidden": true,
      "description": "Configure coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CODE_COVERAGE": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "release",
      "hidden": true,
      "description": "Configure release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "description": "Configure release build",
      "generator": "Ninja"
    },
    {
      "name": "clang",
      "hidden": true,
      "description": "Configure release build",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux",
      "description": "Sets generator, build and install directory",
      "binaryDir": "${sourceDir}/build",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CODE_COVERAGE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "linux-coverage",
      "description": "Configure coverage",
      "inherits": ["coverage", "linux" ]
    },
    {
      "name": "linux-release",
      "description": "Configure coverage",
      "inherits": ["release", "linux" ]
    },
    {
      "name": "linux-ninja",
      "description": "Configure debug build",
      "inherits": [ "ninja", "linux"]
    },
    {
      "name": "linux-release-ninja",
      "description": "Configure debug build",
      "inherits": ["release", "linux-ninja" ]
    },
    {
      "name": "linux-coverage-ninja",
      "description": "Configure coverage",
      "inherits": [ "coverage", "linux-ninja" ]
    },
        {
      "name": "linux-ninja-clang",
      "description": "Configure debug build",
      "inherits": ["ninja", "clang", "linux"]
    },
    {
      "name": "linux-release-ninja-clang",
      "description": "Configure debug build",
      "inherits":["release", "linux-ninja-clang" ]
    }
  ],
  "buildPresets": [
    {
      "name": "linux-build",
      "configurePreset": "linux"
    },
    {
      "name": "linux-clean-build",
      "inherits": "linux-build",
      "cleanFirst": true
    },
    {
      "name": "linux-build-doc",
      "inherits": "linux-build",
      "targets": [ "docs" ]
    },
    {
      "name": "linux-build-package",
      "inherits": "linux-build",
      "targets": [ "package" ]
    }
  ]
}